<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <LinearLayout
            android:id="@+id/spinner_layout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/bg_white_rounded_corners"
            android:orientation="horizontal"
            android:paddingStart="8dp"
            android:paddingEnd="8dp">

        <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/from"/>

        <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/sp_from_currency"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:entries="@array/currencies"
                android:gravity="center_vertical"
                android:spinnerMode="dialog"/>

        <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/to"/>

        <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/sp_to_currency"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:entries="@array/currencies"
                android:gravity="center_vertical"
                android:spinnerMode="dialog"/>
    </LinearLayout>

    <EditText
            android:id="@+id/tv_currency_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/spinner_layout"
            app:layout_constraintEnd_toEndOf="@id/spinner_layout"
            android:layout_marginTop="8dp"
            android:hint="@string/add_your_quantity_here"
            android:padding="12dp"
            android:inputType="number"
            app:layout_constraintTop_toBottomOf="@id/spinner_layout"/>

    <TextView
            android:id="@+id/tv_result_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/spinner_layout"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/tv_currency_input"
            android:text="@string/result"/>

    <TextView
            android:id="@+id/tv_result_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="18sp"
            android:gravity="center"
            tools:text="5000"
            app:layout_constraintTop_toBottomOf="@id/tv_currency_input"
            app:layout_constraintStart_toEndOf="@id/tv_result_title"
            app:layout_constraintEnd_toEndOf="@id/spinner_layout"/>

</androidx.constraintlayout.widget.ConstraintLayout>